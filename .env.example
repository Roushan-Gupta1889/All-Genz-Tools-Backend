# ===========================================
# PDF Compression Backend - Environment Configuration
# ===========================================
# Copy this file to .env and update with your values
# NEVER commit the actual .env file to version control!

# Server Configuration
PORT=5000
NODE_ENV=development  # Set to 'production' when deploying

# File Upload Limits
MAX_FILE_SIZE_MB=50  # Maximum PDF file size (recommended: 50MB for 512MB VPS)

# CORS Configuration
# IMPORTANT: Update with your frontend URL in production
CORS_ORIGIN=http://localhost:5173  # Development: Vite default port
# Production example: CORS_ORIGIN=https://allgenztools.com

# Rate Limiting (Protection against abuse)
RATE_LIMIT_WINDOW_MS=600000        # 10 minutes
RATE_LIMIT_MAX_REQUESTS=3          # Requests per window (Production: 3, Development: 50)

# Cleanup Configuration (Automatic file deletion for privacy)
CLEANUP_INTERVAL_MS=60000    # Run cleanup every 1 minute
FILE_MAX_AGE_MS=120000       # Delete files older than 2 minutes

# Ghostscript Configuration
GS_COMPRESSION_PRESET=ebook        # Default quality (ebook, screen, printer, prepress)
GS_TIMEOUT_MS=120000               # 2 minutes timeout (safe for 512MB VPS)
